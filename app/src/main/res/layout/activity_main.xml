<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/logoLogin"
        android:layout_width="320dp"
        android:layout_height="170dp"
        android:src="@drawable/testlogin"
        android:scaleType="centerCrop"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/lbLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="Login"
        android:fontFamily="@font/righteous"
        android:textColor="#050505"
        android:textSize="35sp"
        android:layout_below="@id/logoLogin"
        android:layout_centerHorizontal="true"
        />

    <EditText
        android:id="@+id/etUsername"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/lbLogin"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/baseline_person_outline_24"
        android:drawablePadding="15dp"
        android:hint="Username"
        android:padding="15dp"
        android:textColorHint="@color/black"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etPassword"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/etUsername"
        android:layout_marginTop="30dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:background="@drawable/rounded_edittext"
        android:drawableStart="@drawable/baseline_lock_24"
        android:drawablePadding="15dp"
        android:hint="Password"
        android:padding="20dp"
        android:inputType="textPassword"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/textdaftar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="75dp"
        android:text="Belum punya akun? Segera "
        android:textSize="17sp" />

    <TextView
        android:id="@+id/textregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etPassword"
        android:layout_toRightOf="@id/textdaftar"
        android:layout_marginTop="20dp"
        android:text="Register"
        android:textStyle="bold"
        android:textColor="#FF6969"
        android:textSize="17sp" />

    <Button
        android:id="@+id/btnlogin"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@id/etPassword"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/black"
        android:fontFamily="@font/roboto_bold"
        android:textSize="19sp"
        android:backgroundTint="#FFFADD"
        android:text="Login" />

</RelativeLayout>